	</select>
	
	<select id="noticeList2" resultType="hashmap">
		select * from noticeview where noticetitle_no='2' order by no desc
	</select>
	
	<select id="noticeList3" resultType="hashmap">
		select * from noticeview where noticetitle_no='3' order by no desc
	</select>
	
	<select id="noticeList4" resultType="hashmap">
		select * from noticeview where noticetitle_no='4' order by no desc
	</select> -->
	
	<select id="selectAll" parameterType="SearchVO" 
		resultType="hashmap" >
		select *
		from
		(
		    select rownum as RNUM, blist.*
		    from(
		        select * from noticeview 
		        <include refid="searchWhere"></include>
		        order by no desc		        
		    ) blist
		) 
		<![CDATA[
		where RNUM > #{firstRecordIndex} 
		and RNUM<=#{firstRecordIndex}+ #{recordCountPerPage} ]]>	
	</select>
	
	<!-- <select id="selectTotalRecordCount" resultType="int" 
		parameterType="SearchVO">
		select count(*) from noticeview
		<include refid="searchWhere"></include>	
	</select> -->
	
	<select id="selectTotalRecordCount" resultType="int" 
		parameterType="NotiSearchVO">
		select count(*) from noticeview
		<include refid="searchWhere"/>
	</select>
	
	
	<update id="updateReadCount" parameterType="int">
		update notice
		set readcount=readcount+1 
		where no=#{no}
	</update>
	
	<select id="selectByNo" parameterType="int" resultType="hashmap">
		select * from noticeview where no=#{no}
	</select>
	
	<select id="noticeRownum" resultType="hashmap">
		select *
		from (
		    select * from noticeview order by no desc
		)	
		<![CDATA[
		where rownum <= 5]]>
	</select>
	
	<insert id="insertNotice" parameterType="NoticeVO">
		<selectKey keyProperty="no" resultType="int" order="BEFORE">
			select notice_seq.nextval from dual
		</selectKey>
		insert into notice(no,admin_no,noticetitle_no,title,contents)
		values(#{no},#{adminNo},#{noticetitleNo},#{title},#{contents})
	</insert>
	
	<update id="updateNotice" parameterType="NoticeVO">
		update notice
		set noticetitle_no=#{noticetitleNo},title=#{title},contents=#{contents}
		where no=#{no}
	</update>
	
	<delete id="deleteNotice" parameterType="int">
		delete from notice where no=#{no}
	</delete>
	
	<select id="nextprev" parameterType="int" resultType="hashmap">
		select * from
			(
			   select no,title,
			   lead(title,1,'다음글') over (order by no) next_title,
			   lag(title,1,'이전글') over (order by no) pre_title
			   from notice
			)
		where no=#{no} order by no desc
	</select>
</mapper>








